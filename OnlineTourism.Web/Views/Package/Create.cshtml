@model OnlineTourism.Entity.PackageDetails

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Package", FormMethod.Post))
{
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("PackageId")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.PackageId)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.PackageName)</td>
            <td>@Html.EditorFor(Model => Model.PackageName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.PackagePrice)</td>
            <td>@Html.EditorFor(Model => Model.PackagePrice)</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "Index")
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>
    </table>
}

