@model OnlineTourism.Entity.PackageDetails

@{
    ViewBag.Title = "Edit Package";
}

<h2>Edit Package</h2>

@using (Html.BeginForm("Edit", "Package", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.PackageId)
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("PackageName")
            </td>
            <td>
                @Html.EditorFor(Model=>Model.PackageName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("PackagePrice")
            </td>
            <td>
                @Html.EditorFor(Model=>Model.PackagePrice)
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Cancel", "Index")
            </td>
            <td>
               <input type="submit" value="Update" />
            </td>
        </tr>
    </table>
}

